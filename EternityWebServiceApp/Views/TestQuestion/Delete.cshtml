@model EternityWebServiceApp.Models.TestQuestion
@{
    ViewData["Title"] = "Удаление вопроса";
}
<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Вопрос</th>
            <th>Правильный ответ</th>
            <th>Неправильный ответ</th>
            <th>Неправильный ответ</th>
            <th>Неправильный ответ</th>
        </tr>
        <tr>
            <td>@Model.TestQuestionId</td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.Question</span>
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.RightAnswer</span>
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.WrongAnswer1</span>
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.WrongAnswer2</span>
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.WrongAnswer3</span>
            </td>
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="TestQuestion" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="TestQuestion" asp-action="Index">Вернуться к списку</a>
</div>