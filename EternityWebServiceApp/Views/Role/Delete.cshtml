@model             Role
@{
    ViewData["Title"] = "Удаление роли";
}
<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Роль</th>
        </tr>
        <tr>
            <td>@Model.RoleId</td>
            <td>@Model.Name</td>
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="Role" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="Role" asp-action="Index">Вернуться к списку</a>
</div>