@model EternityWebServiceApp.Models.Attraction
@{
    ViewData["Title"] = "Удаление достопримечательности";
}
<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Достопримечательность</th>
            <th>Описание</th>
        </tr>
        <tr>
            <td>@Model.AttractionId</td>
            <td>@Model.Title</td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.Description</span>
            </td>
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="Attraction" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="Attraction" asp-action="Index">Вернуться к списку</a>
</div>