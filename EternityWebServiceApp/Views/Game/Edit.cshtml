@model EternityWebServiceApp.Models.Game
@{
    ViewData["Title"] = "Редактировать игру";
}
<h2>@ViewData["Title"].</h2>
 
<form asp-action="Edit" asp-controller="Game" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="GameId" />
        <div class="form-group">
            <label asp-for="Name">Игра</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
 
<div>
    <a asp-controller="Game" asp-action="Index">Вернуться к списку</a>
</div>