@model EternityWebServiceApp.Models.City
@{
    ViewData["Title"] = "Удаление города";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Город</th>
        <th>Описание</th>
    </tr>
    <tr>
        <td>@Model.CityId</td>
        <td>@Model.Title</td>
        <td>@Model.Description</td>
    </tr>
</table>
 
<form asp-action="Delete" asp-controller="City" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="City" asp-action="Index">Вернуться к списку</a>
</div>