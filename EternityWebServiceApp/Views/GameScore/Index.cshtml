@model IEnumerable<EternityWebServiceApp.Models.GameScore>
@{
    ViewData["Title"] = "Лучшие результаты в играх";
}
<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Игра</th>
            <th>Счет</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GameScoreId</td>
                <td>@item.User.UserName</td>
                <td>@item.Game.Name</td>
                <td>@item.Score</td>
                <td>
                    <a asp-controller="GameScore" asp-action="Delete" asp-route-id="@item.GameScoreId">Удалить</a>
                </td>
            </tr>
        }
    </table>
</div>